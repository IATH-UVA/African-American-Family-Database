<h3>Searching: <%= @search_terms %></h3>
<h4>Matching: <%= @wide_tables.size %></h4>
<table id="result_table" class="tablesorter">
	<thead>
	<th>Source</th>
	<th>Record Year</th>
	<th>First Name</th>
	<th>Last Name</th>
	<th>Birth Year</th>
	<th>Race</th>
	<th>Gender</th>
	<th>Owner</th>
	<th>Purchaser</th>
	<th>Legaltee</th>
	</thead>
	<tbody>
<% @wide_tables.each do |t| %>
	<tr>
		<td><%= t.src_table_id %></td>
		<td><%= t.record_year %></td>
		<td><%= t.first_name %></td>
		<td><%= t.last_name %></td>
		<td><%= t.birth_year %></td>
		<td><%= t.race %></td>
		<td><%= t.gender %></td>
		<td><%= t.owner %></td>
		<td><%= t.purchaser %></td>
		<td><%#= t.legaltee %></td>
		<td><%= link_to('Show', {:action => 'show_result', :id => t.id}, :remote => true )%>
<% end %>
	</tbody>
</table>