<!DOCTYPE html>
<html>
<head>
  <title>AafDb</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <script type="text/javascript">

    $(function(){
      $(".containerPlus").buildContainers({
        containment:"document",
        elementsPath:"../assets/",
        maintainOnWindow:false
      });
    });
    
  </script>

</head>
<body>
	<div class="header-block">
		<div class="home">
			<%= link_to(image_tag('home.png'),'http://centralvirginiahistory.org')%>
		</div>
		<div class="header-title"><!-- The African-American Families Database Project -->
			<span class="header-image"><%= image_tag('header.jpg')%></span>
		</div>
		<div class="menu">
		  <%#= render 'devise/menu/registration_items' %>
		  <%= render 'devise/menu/login_items' %>
		</div>
	</div>
	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>
<%= yield %>

</body>
</html>
